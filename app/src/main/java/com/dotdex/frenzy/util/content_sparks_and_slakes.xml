<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_box_qa"
    app:layout_behavior="com.dipoletech.unnmobile.utility.FixedScrollingViewBehavior"
    tools:context=".SparksAndSlake"
    android:orientation="vertical"
    tools:showIn="@layout/activity_spark_slake">
    <!-- We shall include the tab layout here-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabTextColor="@color/colorPrimary"
        android:paddingBottom="5dp"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="1dp"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        android:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <!--and then i shall include the viewpager layout here-->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>
